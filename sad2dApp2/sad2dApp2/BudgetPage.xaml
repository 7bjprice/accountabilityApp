<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:sad2dApp2"
             x:Class="sad2dApp2.BudgetPage"
             Title="Budget"
             BackgroundColor="#F9FAFB"
             >

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:RemainingToColorConverter x:Key="RemainingToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- Layout: header (Auto), content (*), bottom nav (Auto) -->
    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">

        <!-- Header -->
        <Label Grid.Row="0"
               Text="My Budget"
               FontSize="34"
               FontAttributes="Bold"
               TextColor="#1E1E1E"
               HorizontalOptions="Center"
               Margin="0,16,0,8" />

        <!-- Main scrollable content
             NOTE: extra bottom padding ensures content doesn't get hidden behind the nav -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20,0,20,96" Spacing="18">

                <!-- Summary Card -->
                <Frame CornerRadius="16"
                       HasShadow="True"
                       BackgroundColor="#4CAF50"
                       Padding="18">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Total Budget" FontSize="18" TextColor="White" />
                        <Label x:Name="TotalBudgetLabel" Text="$0" FontSize="30" FontAttributes="Bold" TextColor="White" />
                        <Label x:Name="TotalSpentLabel" Text="Spent: $0" FontSize="18" TextColor="White" />
                        <Label x:Name="RemainingLabel" Text="Remaining: $0" FontSize="18" TextColor="White" />
                    </VerticalStackLayout>
                </Frame>

                <Button Text="Set Total Budget"
                        Clicked="OnSetBudgetClicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="12"
                        HeightRequest="45" />

                <!-- Budget list -->
                <CollectionView x:Name="BudgetList"
                                ItemsLayout="VerticalList"
                                Margin="0,12,0,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="16"
                                   HasShadow="True"
                                   BackgroundColor="White"
                                   Padding="16"
                                   Margin="0,8">
                                <!-- Use a Grid with rows; last row holds the icon buttons -->
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                    <!-- Row 0: Category + Amount -->
                                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                        <Label Text="{Binding Category}"
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               TextColor="#1E1E1E" />
                                        <Label Text="{Binding Amount, StringFormat='${0:F2}'}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#4CAF50"
                                               Grid.Column="1" />
                                    </Grid>

                                    <!-- Row 1: Spent / Remaining -->
                                    <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,4,0,0">
                                        <Label Text="{Binding Spent, StringFormat='Spent: ${0:F2}'}"
                                               FontSize="14"
                                               TextColor="#666" />
                                        <Label Text="{Binding Remaining, StringFormat='Left: ${0:F2}'}"
                                               FontSize="14"
                                               TextColor="{Binding Remaining, Converter={StaticResource RemainingToColorConverter}}"
                                               Grid.Column="1"
                                               HorizontalTextAlignment="End" />
                                    </Grid>

                                    <!-- Row 2: Progress -->
                                    <ProgressBar Grid.Row="2"
                                                 Progress="{Binding Progress}"
                                                 HeightRequest="6"
                                                 BackgroundColor="#E0E0E0"
                                                 ProgressColor="#4CAF50"
                                                 Margin="0,8,0,8" />

                                    <!-- Row 3: Icon buttons (aligned to right) -->
                                    <HorizontalStackLayout Grid.Row="3"
                                                           Grid.ColumnSpan="2"
                                                           HorizontalOptions="End"
                                                           Spacing="8">

                                        <ImageButton Source="plus.png"
                                                     CommandParameter="{Binding .}"
                                                     Clicked="OnAddExpenseClicked"
                                                     HeightRequest="26"
                                                     WidthRequest="26"
                                                     BackgroundColor="Transparent"
                                                     Padding="6"
                                                     Aspect="AspectFit"
                                                     SemanticProperties.Hint="Add expense" />

                                        <ImageButton Source="edit_icon.png"
                                                     CommandParameter="{Binding .}"
                                                     Clicked="OnRenameItemClicked"
                                                     HeightRequest="26"
                                                     WidthRequest="26"
                                                     BackgroundColor="Transparent"
                                                     Padding="6"
                                                     Aspect="AspectFit"
                                                     SemanticProperties.Hint="Rename item" />

                                        <ImageButton Source="trash_icon.png"
                                                     CommandParameter="{Binding .}"
                                                     Clicked="OnDeleteItemClicked"
                                                     HeightRequest="26"
                                                     WidthRequest="26"
                                                     BackgroundColor="Transparent"
                                                     Padding="6"
                                                     Aspect="AspectFit"
                                                     SemanticProperties.Hint="Delete item" />
                                    </HorizontalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Button Text="Add New Budget Item"
                        Clicked="OnAddBudgetItemClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="12"
                        HeightRequest="50"
                        Margin="0,10,0,20" />
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom nav -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,*,*"
              HeightRequest="72"
              BackgroundColor="#F1F1F1"
              Padding="8,10">
            <Button Text="Budgets" Grid.Column="0" 
                    BackgroundColor="Transparent" 
                    TextColor="#4CAF50" />
            <Button Text="Home" 
                    Grid.Column="1" 
                    BackgroundColor="Transparent" 
                    TextColor="#333" 
                    Clicked="OnMainClicked" />
            <Button Text="Goals" 
                    Grid.Column="2" 
                    BackgroundColor="Transparent" 
                    TextColor="#333" 
                    Clicked="OnGoalsClicked" />
        </Grid>
    </Grid>
</ContentPage>
