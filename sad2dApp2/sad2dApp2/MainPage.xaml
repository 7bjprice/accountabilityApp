<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:sad2dApp2.Converters"
             x:Class="sad2dApp2.MainPage"
             BackgroundColor="#F9FAFB">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToTextDecorationConverter x:Key="BoolToTextDecorationConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- 🟢 Top Section: Pet info -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" 
                                 Spacing="10" 
                                 HorizontalOptions="Center">
                
                <Label Text="Umbreon" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="#333"/>

                <WebView x:Name="myWebView"
                         HeightRequest="250"
                         WidthRequest="250"
                         HorizontalOptions="Center"
                         Source="umbreon_render.html" />


                <Label Text="Happiness" 
                       FontSize="14" 
                       TextColor="#333"/>
     
                <ProgressBar x:Name="HappinessBar" 
                             Progress="{Binding Happiness}"
                             HeightRequest="6"
                             ProgressColor="#673AB7"
                             BackgroundColor="#c4c4c4"/>

                <Label Text="Wellness" 
                       FontSize="14" 
                       TextColor="#333"/>
                
                <ProgressBar x:Name="WellnessBar"
                             
                             HeightRequest="6" 
                             ProgressColor="#673AB7"
                             BackgroundColor="#F9FAFB"
                             />

            </VerticalStackLayout>
        </ScrollView>

        <!-- 🟣 Middle Section: Tasks -->
        <VerticalStackLayout Grid.Row="1" Padding="20" Spacing="10">
            <Label Text="Today's Tasks"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" 
                   TextColor="#333"/>

            <CollectionView x:Name="TasksList" ItemsSource="{Binding Tasks}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5" Padding="10" BackgroundColor="#EEE" CornerRadius="10">
                            <HorizontalStackLayout Spacing="10">
                                <CheckBox IsChecked="{Binding IsCompleted}" />
                                <Label Text="{Binding Title}"
                                       TextDecorations="{Binding IsCompleted, Converter={StaticResource BoolToTextDecorationConverter}}" 
                                       TextColor="#333"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>

        <!-- Bottom nav -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,*,*"
              HeightRequest="72"
              BackgroundColor="#F1F1F1"
              Padding="8,10">
            <Button Text="Budgets" Grid.Column="0" 
                    BackgroundColor="Transparent" 
                    TextColor="#333" 
                    Clicked="OnBudgetClicked"/>
            <Button Text="Home" 
                    Grid.Column="1" 
                    BackgroundColor="Transparent" 
                    TextColor="#4CAF50"/>
            <Button Text="Goals" 
                    Grid.Column="2" 
                    BackgroundColor="Transparent" 
                    TextColor="#333" 
                    Clicked="OnGoalsClicked" />
        </Grid>
    </Grid>
</ContentPage>
