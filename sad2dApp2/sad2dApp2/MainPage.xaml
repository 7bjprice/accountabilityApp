<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sad2dApp2.MainPage">

    <Grid>

        <Image  Source="dotnet_bot.png"
                WidthRequest="400"
                HeightRequest="400"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>

        <!-- Bottom row with 3 equal buttons -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*,*"
          VerticalOptions="End">

            <Button Text="Budgets"
                Grid.Column="0"
                HeightRequest="80"
                FontSize="Header"/>

            <Button Text="Home"
                Grid.Column="1"
                HeightRequest="80"
                FontSize="Header"/>

            <Button Text="Goals"
                Grid.Column="2"
                HeightRequest="80"
                FontSize="Header"/>
        </Grid>

    </Grid>
</ContentPage>
