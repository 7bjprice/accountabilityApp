<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:sad2dApp2.Converters"
             x:Class="sad2dApp2.MainPage"
             BackgroundColor="#F9FAFB">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToTextDecorationConverter x:Key="BoolToTextDecorationConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- 🟢 Top Section: Pet info -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" 
                                 Spacing="10" 
                                 HorizontalOptions="Center">

                <Label Text="Umbreon" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="#333"/>

                <WebView x:Name="myWebView"
                         HeightRequest="400"
                         WidthRequest="400"
                         HorizontalOptions="Center"/>



                <Label Text="Happiness" 
                       FontSize="14" 
                       TextColor="#333"/>

                <ProgressBar x:Name="HappinessBar" 
                             Progress="{Binding Happiness}"
                             HeightRequest="6"
                             ProgressColor="#673AB7"
                             BackgroundColor="#c4c4c4"/>

                <Label Text="Wellness" 
                       FontSize="14" 
                       TextColor="#333"/>

                <ProgressBar x:Name="WellnessBar"
                             
                             HeightRequest="6" 
                             ProgressColor="#673AB7"
                             BackgroundColor="#F9FAFB"
                             />
                <Button Text="Reset" 
                    Grid.Column="2" 
                    BackgroundColor="DarkGreen" 
                    TextColor="white" 
                    Clicked="OnResetClicked" />

            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom nav -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,*,*"
              HeightRequest="72"
              BackgroundColor="#F1F1F1"
              Padding="8,10">
            <Button Text="Budgets" Grid.Column="0" 
                    BackgroundColor="Transparent" 
                    TextColor="#333" 
                    Clicked="OnBudgetClicked"/>
            <Button Text="Home" 
                    Grid.Column="1" 
                    BackgroundColor="Transparent" 
                    TextColor="#4CAF50"/>
            <Button Text="Goals" 
                    Grid.Column="2" 
                    BackgroundColor="Transparent" 
                    TextColor="#333" 
                    Clicked="OnGoalsClicked" />

        </Grid>
    </Grid>
</ContentPage>
