<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="sad2dApp2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:sad2dApp2"
    Title="MyAccountagotchi">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Budget"
        ContentTemplate="{DataTemplate local:BudgetPage}"
        Route="BudgetPage" />

    <ShellContent
        Title="Goals"
        ContentTemplate="{DataTemplate local:GoalsPage}"
        Route="GoalsPage" />

    <ShellContent
        Title="FullScreen"
        ContentTemplate="{DataTemplate local:WebViewFullScreen}"
        Route="WebViewFullScreen" />
</Shell>
